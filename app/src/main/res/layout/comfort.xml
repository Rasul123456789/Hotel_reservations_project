<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Фон сурет -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/arsenal"
        android:scaleType="centerCrop" />

    <!-- Негізгі контент -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Галерея -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="260dp">

                <!-- ViewPager2 суреттер үшін -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Prev / Next батырмалары -->
                <ImageButton
                    android:id="@+id/btnPrevImage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/arrow_up_float"
                    android:rotation="-90"
                    android:contentDescription="Previous" />

                <ImageButton
                    android:id="@+id/btnNextImage"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/arrow_up_float"
                    android:rotation="90"
                    android:contentDescription="Next" />

            </FrameLayout>

            <!-- Индикатор сурет нөмірі -->
            <TextView
                android:id="@+id/tvImageIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 / 3"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="#000000" />

            <!-- Тақырып -->
            <TextView
                android:id="@+id/tvRoomTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comfort Бөлме"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000" />

            <!-- Эмодзи сипаттамалар -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tvCharacteristics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Күндер таңдау -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Келу күні:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textColor="#1E88E5" />

            <Button
                android:id="@+id/btnCheckIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Келу күнін таңдау"
                android:backgroundTint="#03A9F4"
                android:textColor="#FFFFFF"
                android:layout_marginTop="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Кету күні:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:textColor="#1E88E5" />

            <Button
                android:id="@+id/btnCheckOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Кету күнін таңдау"
                android:backgroundTint="#03A9F4"
                android:textColor="#FFFFFF"
                android:layout_marginTop="6dp" />

            <!-- Баға көрсету -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Жалпы баға:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="18dp"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 ₸"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:textColor="#FF0000" />

            <!-- Брондау батырмасы -->
            <Button
                android:id="@+id/btnBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Брондау"
                android:layout_marginTop="16dp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF" />

            <!-- Артқа батырма -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="← Артқа"
                android:layout_marginTop="16dp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
